{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "goblin": ["./packages/goblin/src"],
      "goblin/*": ["./packages/goblin/src/*"],
      "goblin-core": ["./packages/goblin-core/src"],
      "goblin-core/*": ["./packages/goblin-core/src/*"],
      // nextjs site文件夹专用
      "components/*": ["./packages/components/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["packages"],
  "exclude": ["**/node_modules"]
}
